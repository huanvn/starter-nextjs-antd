{
  "extends": ["prettier", "prettier/react", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": true,
    "describe": true,
    "before": true,
    "it": true,
    "expect": true,
    "sinon": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": 0,
    "class-methods-use-this": 0,
    "import/no-named-as-default": 0,
    "prettier/prettier": 1
  }
}
